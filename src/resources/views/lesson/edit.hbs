<div class="mt-4">
   <h4>Dang khoa hoc</h4>
    <form method="POST" action="/lesson/{{lesson._id}}/update?_method=PUT" class="mt-4">
        <div class="mb-3">
            <label for="name" class="form-label">Ten</label>
            <input type="text" class="form-control" id="title" name="title" value="{{lesson.title}}">        
        </div>  
        <div class="mb-3">
            <label for="description" class="form-label">Mo ta</label>
            <input type="text" class="form-control" id="description" name="description" value="{{lesson.description}}">        
        </div>  
        <div class="mb-3">
            <label for="level" class="form-label">Level</label>
            <input type="text" class="form-control" id="level" name="level" value="{{lesson.level}}">        
        </div>  
        <div class="mb-3">
            <label for="videoid" class="form-label">Video ID</label>
            <input type="text" class="form-control" id="videoid" name="videoid" value="{{lesson.videoid}}">        
        </div>  
        <button type="submit" class="btn btn-primary" >Luu lai</button>
    </form>
</div>

